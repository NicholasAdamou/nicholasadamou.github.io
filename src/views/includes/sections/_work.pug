extends ../../layouts/_section.pug

block mixins
    mixin website(title, desc, link, faClassName)
        li
            i(class=faClassName).fa
            | 
            a(href=link).link #{title.toLowerCase()}
            | 
            span (#{desc.toLowerCase()})

block content
    section#work
        +tag("work", "id", "client-websites")
        ol.list
            +website("Advanced-Electrical-Services", "electricalian", "http://advancedelectricalservicesinc.com", "fa-bolt")
            +website("Cut-Paste-Copy", "graphic design agency", "https://cutpastecopy.github.io/", "fa-paint-brush")
            +website("BPhong-Music", "19 yr old rapper", "https://bphong.github.io/", "fa-music")
        +tag("/work")
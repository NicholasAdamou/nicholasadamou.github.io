extends ../../layouts/_section.pug

block mixins
    mixin pen(title, desc, link, faClassName)
        li
            i(class=faClassName)
            | 
            a(href=link).link #{title.toLowerCase()}
            | 
            span (#{desc.toLowerCase()})

block content
    section#codepen
        +tag("code-pens", "id", "hearted, pens")
        ol.list
            +pen("flexbox-navigation", "flexbox navigation", "https://codepen.io/NicholasAdamou/pen/pwddGp", "fas fa-bars")
            +pen("clockface", "typography-based clock made using js", "https://codepen.io/NicholasAdamou/pen/ZOjjVm", "fas fa-clock")
            +pen("devster", "a developer portfolio template", "https://codepen.io/NicholasAdamou/pen/kXQVNz", "fas fa-code")
            +pen("chrome-new-tab", "js-based unsplash new-tab page", "https://codepen.io/NicholasAdamou/pen/rLkOYp", "fab fa-chrome")
        +tag("/code-pens")
        a(href="https://codepen.io/NicholasAdamou" style="margin-left: 10px; text-transform: lowercase; text-decoration: none;").tag View More
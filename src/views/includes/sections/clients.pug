- var white = "#fafafa"
- var black = "black"
- var grey = "#F5F5F5"
- var blue = "#212856"

mixin client(link, image)
	li
		a(href=link target="_blank")
			img(data-src="assets/images/logos/" + image alt="client logo").lazy

section#clients.hero.is-fullheight.is-widescreen
	.hero-body
		.container.has-text-centered
			h3 Client Work
			p various 
				i(style="color: #663300").fas.fa-briefcase
				|  -related projects.
			ul
				+client("https://github.com/cutpastecopy/cutpastecopy.github.io", "cpc_logo.png")
				+client("https://github.com/nicholasadamou/Mack-Media-Group-Internship-Project", "mack-logo.png")
				+client("https://github.com/nicholasadamou/Advanced-Electrical-Services", "aes_logo.png")
	+footer-text("Read more about them on my", "LinkedIn", "https://www.linkedin.com/in/nicholas-adamou/", "linkedin")
